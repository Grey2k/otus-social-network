# /lib/systemd/system/gosocialotus.service

[Unit]
Description=gosocialotus

[Service]
Type=simple
Restart=always
RestartSec=5s
WorkingDirectory=/var/www/otus-social-network
ExecStart=/var/www/otus-social-network/build

[Install]
WantedBy=multi-user.target

[Log]
StandardOutput=file:/var/log/otus-social/log_stdout.log
StandardError=file:/var/log/otus-social/log_stderr.log
